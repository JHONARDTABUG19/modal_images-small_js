        <p class="text-gray-600 text-lg mb-4">$29.99</p>

        <!-- Button to open modal -->
        <button id="viewDetailsBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md">
            View Details
        </button>
    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="modal-overlay">
        <div class="modal-content">
            <!-- Close button for the modal -->
            <button id="closeModalBtn" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-3xl font-bold rounded-full w-10 h-10 flex items-center justify-center transition-colors duration-200">
                &times;
            </button>

            <!-- Larger Image -->
            <img id="modalImage" src="https://placehold.co/800x800/FFDDC1/000000?text=Large+Fashion+T-Shirt" alt="Large Fashion T-Shirt" class="w-full h-auto object-cover rounded-lg mb-6 shadow-lg">

            <!-- More Product Info -->
            <div class="text-gray-800">
                <h3 class="text-3xl font-bold mb-4">Classic Cotton T-Shirt</h3>
                <p class="text-xl font-semibold text-gray-700 mb-4">$29.99</p>
                <p class="text-lg mb-4 leading-relaxed">
                    Elevate your everyday style with our Classic Cotton T-Shirt. Crafted from 100% premium, breathable cotton, it offers unparalleled comfort and durability. Its versatile design makes it perfect for casual outings or layering under a jacket. Available in a range of sizes and colors.
                </p>
                <ul class="list-disc list-inside text-gray-600 text-base space-y-2">
                    <li>Material: 100% Premium Cotton</li>
                    <li>Fit: Regular Fit</li>
                    <li>Care: Machine Wash Cold</li>
                    <li>Available Sizes: S, M, L, XL, XXL</li>
                    <li>Colors: White, Black, Grey, Navy</li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        // Get references to the elements
        const viewDetailsBtn = document.getElementById('viewDetailsBtn');
        const imageModal = document.getElementById('imageModal');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const productImage = document.getElementById('productImage'); // The small image
        const modalImage = document.getElementById('modalImage');     // The large image in modal

        // Function to open the modal
        function openModal() {
            // Update the modal image source if it's different (optional, but good for dynamic content)
            // For this example, modalImage has its own hardcoded large image.
            // If you want it to be truly dynamic based on productImage:
            // modalImage.src = productImage.src.replace('400x400', '800x800'); // Example: changing placeholder size
            imageModal.classList.add('show');
            document.body.style.overflow = 'hidden'; // Prevent scrolling when modal is open
        }

        // Function to close the modal
        function closeModal() {
            imageModal.classList.remove('show');
            document.body.style.overflow = ''; // Re-enable scrolling
        }

        // Event listener for the "View Details" button
        viewDetailsBtn.addEventListener('click', openModal);

        // Event listener for the close button inside the modal
        closeModalBtn.addEventListener('click', closeModal);

        // Event listener to close modal when clicking outside the content (on the overlay)
        imageModal.addEventListener('click', (event) => {
            if (event.target === imageModal) {
                closeModal();
            }
        });

        // Optional: Close modal with Escape key
        document.addEventListener('keydown', (event) => {
            if (event.key === 'Escape' && imageModal.classList.contains('show')) {
                closeModal();
            }
        });
    </script>
</body>
